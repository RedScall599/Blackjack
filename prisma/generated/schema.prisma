generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

////////////////////////////////////////////////////
// ENUMS
////////////////////////////////////////////////////

enum GameResult {
  WIN
  LOSS
  PUSH
}

enum Role {
  USER
  ADMIN
}

////////////////////////////////////////////////////
// MODELS
////////////////////////////////////////////////////

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  coins     Int      @default(100)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  games    Game[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("sessions")
}

model Game {
  id          String     @id @default(cuid())
  userId      String
  betAmount   Int
  result      GameResult
  coinsChange Int
  createdAt   DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("games")
}
